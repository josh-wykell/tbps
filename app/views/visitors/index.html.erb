
<div>
  <button type="button" class="btn btn-primary btn-lg pull-right" data-toggle="modal" data-target="#myModal">
  Next Speaker
</button>
  <% @current_speaking_events.each do |event| %>
    <%= event.speaker.name %>
    <%= event.date %>
    <%= event.speaker.image %>
    <%= event.description %>
  <% end %>
</div>

<div>
  <h3><%= link_to 'Next Film', films_path %></h3>
  <% @current_films.each do |film| %>
    <%= film.title %>
    <%= film.date %>
    <%= film.time %>
    <%= film.first_speaker %>
    <%= film.second_speaker %>
    <%= film.synopsis %>
    <%= link_to 'Show', film %>
  <% end %>
</div>

<div>
  <h3><%= link_to 'Other Events', other_events_path %></h3>
  <% @current_other_events.each do |event| %>
    <%= event.title %>
    <%= event.date %>
    <%= event.time %>
    <%= event.description %>
   <% end %> 
</div>

<div>
  <h3><%= link_to 'Member Directory', members_path %></h3>
</div>

<div class="modal fade" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for(mark_as_member) do |form| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Are You A TBPS Member?</h4>
      </div>
      <div class="modal-body">

        <div class="form-group">
          <label for="member_token_true" class="col-sm-2 control-label">Yes</label>
          <div class="col-sm-10">
            <input checked="checked" class="form-control" name="is_a_member_yes" id="Yes" type="radio" value="true">
          </div>
          <label for="member_token_false" class="col-sm-2 control-label">No</label>
          <div class="col-sm-10">
            <input checked="checked" class="form-control" name="is_a_member_no" id="No" type="radio" value="false"
          </div>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-default">Submit</button>     
      </div>
      <% end %>
    </div>
  </div>
</div>
