<p id="notice"><%= notice %></p>

<h1>2015-2016 Speakers</h1>
<% @speaking_events.in_groups_of(4) do |speaking_events| %>
  <div class="row">
    <% speaking_events.each do |speaking_event| %>
      <div class="col-lg-3">
        <div class="well">
          <h4><%= link_to "#{speaking_event.speaker.name}", speaker_path(event.speaker) %></h4>
          <h2><%=  %></h2>
          <p><%= product.description %></p>
          <%= format_money(product.price) %>
          <%= render 'payola/transactions/checkout', sellable: product %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
<br>

<% @speaking_events.each do |speaking_event| %>


<% end %>

<div class="col-md-10 speaking_events_layout">
  <table>
    <thead>
      <tr>
        <th>Speaker</th>
        <th>Date</th>
        <th>Time</th>
        <th>Street address</th>
        <th>City</th>
        <th>Zipcode</th>
        <th>Description</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
     
        <tr>
          <td><%= link_to "#{speaking_event.speaker.name}", speaking_event_path(speaking_event) %></td>
          <td><%= speaking_event.date.strftime("%m/%d/%y") %></td>
          <td><%= speaking_event.time.strftime("%I:%M %P") %></td>
          <td><%= speaking_event.street_address %></td>
          <td><%= speaking_event.city %></td>
          <td><%= speaking_event.zipcode %></td>
          <td><%= link_to "#{truncate speaking_event.description, length: 100, separator: ' '}", speaking_event_path(speaking_event) %></td>
          <% @cart=current_cart %>
          <% if @cart.cart_membership_status.is_a_member %>
            <td><%= number_to_currency(speaking_event.member_price) %></td>
          <% else %>
            <td><%= number_to_currency(speaking_event.regular_price) %></td>
          <% end %>
          <td><%= speaking_event.speaker.name %></td>
          <td><%= link_to "Add to Cart", cart_sale_items_path(current_cart, :speaking_event_id => speaking_event), :method => :post %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="col-md-1"></div>
