<p id="notice"><%= notice %></p>

<h1>Listing Speaking Events</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Street address</th>
      <th>City</th>
      <th>Zipcode</th>
      <th>Description</th>
      <th>Price</th>
      <th>Speaker</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @speaking_events.each do |speaking_event| %>
      <tr>
        <td><%= speaking_event.date %></td>
        <td><%= speaking_event.time %></td>
        <td><%= speaking_event.street_address %></td>
        <td><%= speaking_event.city %></td>
        <td><%= speaking_event.zipcode %></td>
        <td><%= speaking_event.description %></td>
        <td><%= speaking_event.price %></td>
        <td><%= speaking_event.speaker %></td>
        <td><%= link_to 'Show', speaking_event %></td>
        <td><%= link_to 'Edit', edit_speaking_event_path(speaking_event) %></td>
        <td><%= link_to 'Destroy', speaking_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

