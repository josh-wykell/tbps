<p id="notice"><%= notice %></p>

<h1>Listing Speaking Events</h1>

<table>
  <thead>
    <tr>
      <th>Speaker</th>
      <th>Date</th>
      <th>Time</th>
      <th>Street address</th>
      <th>City</th>
      <th>Zipcode</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @speaking_events.each do |speaking_event| %>
      <tr>
        <td><%= link_to "#{speaking_event.speaker.name}", speaking_event_path(speaking_event) %></td>
        <td><%= speaking_event.date %></td>
        <td><%= speaking_event.time %></td>
        <td><%= speaking_event.street_address %></td>
        <td><%= speaking_event.city %></td>
        <td><%= speaking_event.zipcode %></td>
        <td><%= speaking_event.description %></td>
        <% @cart=current_cart %>
        <% if @cart.cart_membership_status.is_a_member %>
          <td>><%= number_to_currency(speaking_event.member_price) %></td>
        <% else %>
          <td><%= number_to_currency(speaking_event.regular_price) %></td>
        <% end %>
        <td><%= speaking_event.speaker.name %></td>
        <td><%= link_to "Add to Cart", sale_items_path(sale_item:{sellable_id: speaking_event.id, sellable_type: "SpeakingEvent", cart_id: current_cart}), method:'post' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

