<!-- add image tag for image -->
<%= form_for(@member, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @member.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@member.errors.count, "error") %> prohibited this member profile from being saved:</h4>

      <ul>
      <% @member.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :avatar, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :avatar, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :body, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :body, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :tag, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :all_tags, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

