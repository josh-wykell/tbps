<p id="notice"><%= notice %></p>

<div class="col-md-1"></div>

<div class="col-md-8 main_theme_layout">
  <table>
    <tr>
      <th>Speaker</th>
      <th>Date</th>
      <th>Time</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Subtotal</th>
      <th>Remove</th>
    </tr>
    <% @cart.sale_items.each do |sale_item| %>
      <tr>
        <td><%= sale_item.speaking_event.speaker.name %></td>
        <td><%= sale_item.speaking_event.date.strftime("%m/%d/%y") %></td>
        <td><%= sale_item.speaking_event.time.strftime("%I:%M %P") %></td>
        <td><%= sale_item.quantity %></td>
        <td><%= number_to_currency(sale_item.unit_price) %></td>
        <td><%= number_to_currency(sale_item.subtotal) %></td>
        <td><%= link_to cart_sale_item_path(@cart, sale_item), method: :delete, data: {confirm: 'Are you sure?'} do%>
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
    <tr>
      <td class="total">
        <h4>Total: <%= number_to_currency(@cart.total_price) %></h4>
      </td>
    </tr>
  </table>
  <h5 class="pull-right"><%= link_to 'Back To Speakers', speakers_path %></h5>
</div>

<div class="col-md-3"></div>

<div class="col-md-3"></div>

<div class="col-md-8 checkout">
  <% unless @cart.total_price == 0 %>
    <a href="<%= checkout_path %>" class="btn btn-primary" role="button">Checkout</a>
  <% else %>
    <a href="<%= edit_cart_path(current_cart) %>" class="btn btn-primary" role="button">Checkout</a>
  <% end %>
</div>
