<p id="notice"><%= notice %></p>
<div class="speaking_events_layout">
  <table>
    <thead>
        <tr>
          <th>Speaker</th>
          <th>Time</th>
          <th>Date</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Subtotal</th>
        </tr>
      </thead>
      <% @cart.sale_items.each do |sale_item| %>
      <tr>
        <td><%= sale_item.speaking_event.speaker.name %></td>
        <td><%= sale_item.speaking_event.time.strftime("%I:%M %P") %></td>
        <td><%= sale_item.speaking_event.date %></td>
        <td><%= sale_item.quantity %></td>
        <td><%= number_to_currency(sale_item.unit_price) %></td>
        <td><%= number_to_currency(sale_item.subtotal) %></td>
      </tr>
    <% end %>
    <tr>
      <td class="total price" colspan="4">
        Total: <%= number_to_currency(@cart.total_price) %>
      </td>
    </tr>
    <tr>
      <td>
        Paid: <%= number_to_currency(@cart.total_price) %>
      </td>
    </tr>
  </table>
</div>

